Page {
  height: fit-content;
  background-color: #f7f7f7;
}

.preview {
  height: 360rpx;
  width: 100%;
  border-bottom: 5rpx solid rgb(170, 172, 171);
}

.meta {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: gray;
}

.view {
  font-size: 26rpx;
  color: gray;
  display: flex;
  align-items: center;
}

.content {
  height: fit-content;
  width: 100%;
  word-break: break-all;
}

.pushtime {
  display: flex;
  justify-content: flex-end;
  font-size: 23rpx;
  color: gray;
}