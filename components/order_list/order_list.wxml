  <view class="list_head">
    <view class="list_num">订单号：D202205241905453430</view>
    <view class="list_status">已取消</view>
  </view>
  <view class="list_content">
    <image src="/pages/choicecar/img/1.png" class="preview"></image>
    <view class="list_info">
      <view class="card_name">线代瑞纳</view>
